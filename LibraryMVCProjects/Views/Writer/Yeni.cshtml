@model LibraryMVCProjects.Models.EntityFramework.Writers
@{
    ViewBag.Title = "Yeni";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Kaydet", "Writer", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group" style="font-size:large">

        @Html.LabelFor(m => m.WriterFirstName)
        @Html.TextBoxFor(m => m.WriterFirstName)
        @Html.ValidationMessageFor(m => m.WriterFirstName)


    </div>
    <div class="form-group" style="font-size:large">

        @Html.LabelFor(m => m.WriterLastName)
        @Html.TextBoxFor(m => m.WriterLastName)
        @Html.ValidationMessageFor(m => m.WriterLastName)

    </div>
    @Html.HiddenFor(m => m.Id)
    <button type="submit" class="btn btn-success">Kaydet</button>
}
@section Scripts{


    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}