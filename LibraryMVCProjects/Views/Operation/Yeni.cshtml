@model LibraryMVCProjects.ViewModels.OperationViewModels
@{
    ViewBag.Title = "Yeni";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Kaydet", "Operation", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group" style="font-style:oblique">

        @Html.LabelFor(m => m.Operations.BookId)
        @Html.DropDownListFor(m => m.Operations.BookId, new SelectList(Model.Books, "Id", "BookName"))
        @Html.ValidationMessageFor(m => m.Operations.BookId)

    </div>
    <div class="form-group" style="font-style:oblique">

        @Html.LabelFor(m => m.Operations.StudentId)
        @Html.DropDownListFor(m => m.Operations.StudentId, new SelectList(Model.Students, "Id", "FirstName"))
        @Html.ValidationMessageFor(m => m.Operations.StudentId)

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Operations.Price)
        @Html.TextBoxFor(m => m.Operations.Price)
        @Html.ValidationMessageFor(m => m.Operations.Price)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Operations.EntryDate)
        @Html.TextBoxFor(m => m.Operations.EntryDate, new { type = "date" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Operations.ExpirationDate)
        @Html.TextBoxFor(m => m.Operations.ExpirationDate, new { type = "date" })
    </div>
    @Html.HiddenFor(m => m.Operations.Id)
    <button type="submit" class="btn btn-success">Kaydet</button>

}

@section Scripts{


    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}